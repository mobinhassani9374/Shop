@model Shop.Mvc.Models.Educations.EducationCreateViewModel
@{
    ViewData["Title"] = "ثبت آموزش جدید - پنل مدیریتی ایمن فروش";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">پنل مدیریتی</a></li>
        <li class="breadcrumb-item"><a href="/Admin/Education/Index">نمایش آموزش های ثبت شده</a></li>
        <li class="breadcrumb-item active" aria-current="page">ثبت آموزش جدید</li>
    </ol>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">ثبت آموزش جدید</div>
    <div class="panel-body">
        <div class="row">
            <form method="post" enctype="multipart/form-data">
                <div class="col-md-12 col-xs-12">
                    <div class="form-group">
                        @Html.Partial("_ServiceResult")
                    </div>
                </div>

                @Html.AntiForgeryToken()

                <div class="col-md-6 col-xs-12">
                    <div class="form-group">
                        <label class="required">عنوان را وارد نمایید</label>
                        <input asp-for="Title" required type="text" placeholder="عنوان" class="form-control">
                    </div>
                </div>
                
                <div class="col-md-12 col-xs-12">
                    <div class="form-group">
                        <label class="required">عکس  را انتخاب کنید </label>
                        <input type="file" required name="@Html.NameFor(c=>c.Image)" />
                    </div>
                </div>

                <hr />
                <div class="col-xs-12">
                    <button type="submit" class="ladda-button btn btn-primary" data-style="zoom-in">
                        <span class="ladda-label">ثبت اطلاعات</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

