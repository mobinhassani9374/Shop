@using Shop.Mvc.Models
@using Shop.Mvc.Models.SlideShow
@using Shop.Mvc.Models.Pagination
@using DNTPersianUtils.Core
@using Shop.Utility.Extensions

@model List<SlideShowViewModel>
@{
    ViewData["Title"] = " نمایش اسلایدشو - پنل مدیریتی ایمن فروش";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">پنل مدیریتی</a></li>
        <li class="breadcrumb-item active" aria-current="page">نمایش اسلایدشو</li>
    </ol>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">نمایش اسلایدشو</div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>عکس </th>
                        <th>لینک</th>
                        <th>حذف</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a data-fancybox="gallery" href="~/Files/SlideShowImages/@(item.ImageName)">
                                        <img style="height:70px" src="~/Files/SlideShowImages/@(item.ImageName)"
                                            class="img-responsive img-thumbnail" />
                                    </a>                                    
                                </td>
                                <td>@item.Link.ToPersianNumbers()</td>
                                <td>
                                    <a asp-action="Delete" data-role="confirm" asp-route-id="@(item.Id)"
                                        class="btn btn-danger ladda-button" data-style="zoom-in">
                                        <span class="ladda-label">حذف </span>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">داده ای یافت نشد</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>