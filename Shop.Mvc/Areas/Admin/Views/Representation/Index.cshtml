@using Shop.Mvc.Models
@using Shop.Mvc.Models.UserManagement
@using Shop.Mvc.Models.Pagination
@using DNTPersianUtils.Core
@using Shop.Utility.Extensions

@model List<Shop.Mvc.Models.Representations.RepresentationViewModel>
@{
    ViewData["Title"] = "لیست نمایندگی ها - پنل مدیریتی ایمن فروش";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">پنل مدیریتی</a></li>
        <li class="breadcrumb-item active" aria-current="page">لیست نمایندگی ها</li>
    </ol>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">لیست نمایندگی ها</div>
    <div class="panel-body">

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>عنوان</th>
                        <th>شماره تماس</th>
                        <th>نام و نام خانوادگی</th>
                        
                        @* <th>عملیات</th> *@
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var user in Model)
                        {

                            <tr>
                                <td>@user.Title</td>
                                <td>@user.PhoneNumber</td>
                                <td>@user.FullName</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">نمایندگی وجود ندارد</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
       
    </div>
</div>


