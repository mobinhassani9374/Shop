@model Shop.Mvc.Models.Product.ProductViewModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Detail</h2>
<p>قیمت : @Model.Price</p>
<p>عنوان : @Model.Title</p>
<p>توضیحات : @Model.Description</p>
<p>عکس  : <img src="~/Files/Images/@(Model.PrimaryImage)" style="width:50px;height:50px;" /></p>
<p>عکس های بیشتر : </p>
@foreach (var item in Model.MoreImages)
{
    <p><img src="~/Files/Images/@(item)" style="width:50px;height:50px;" /></p>
}

