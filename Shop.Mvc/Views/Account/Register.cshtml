@model Shop.Mvc.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام در سایت - ایمن فروش";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">ایمن فروش</a></li>
                <li class="breadcrumb-item active" aria-current="page">ثبت نام در سایت</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
            <div class="login">
                <div class="login__title"> ثبت نام در ایمن فروش </div>
                <div class="login__desc">از این قسمت می توانید در سایت ایمن فروش عضو شوید</div>
                <div class="text-center">
                    <div class="login__icon">
                        <i class="fa fa-unlock-alt"></i>
                    </div>
                </div>

                <form method="post">

                    <div class="col-md-12 col-xs-12">
                        <div class="form-group">
                            @Html.Partial("_ServiceResult")
                        </div>
                    </div>

                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label> شماره همراه خود را وارد کنید</label>
                        <input required="" type="text" class="form-control" placeholder="نام کاربری یا شماره همراه"
                               id="PhoneNumber"
                               asp-for="PhoneNumber">
                    </div>
                    <div class="form-group">
                        <label> نام و نام خانوادگی خود را وارد کنید</label>
                        <input required="" type="text" class="form-control" placeholder="نام و نام خانوادگی"
                               id="PhoneNumber"
                               asp-for="FullName">
                    </div>
                    <div class="form-group">
                        <label>رمز عبور خود را وارد کنید</label>
                        <input required="" type="password" class="form-control" placeholder="رمز عبور" id="Password" asp-for="Password">
                    </div>
                    <div class="form-group">
                        <label>رمز عبور خود را مجددا وارد کنید</label>
                        <input required="" type="password" class="form-control" placeholder="تکرار رمز عبور" id="Password" asp-for="ConfirmPasswprd">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="ladda-button btn btn-primary btn-block" data-style="zoom-in">
                            <span class="ladda-label">ثبت نام</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

