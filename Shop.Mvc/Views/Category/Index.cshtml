@using Shop.Mvc.Models
@using Shop.Mvc.Models.Product
@using Shop.Mvc.Models.Pagination
@using DNTPersianUtils.Core
@using Shop.Utility.Extensions

@model SearchModel<ProductUserSearchViewModel, PaginationViewModel<ProductViewModel>>
@{
    ViewData["Title"] = "دسته بندی محصولات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">ایمن فروش</a></li>
                <li class="breadcrumb-item active" aria-current="page">دسته بندی محصولات</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="category" style="margin-bottom: 20px;">
            <form>
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="control-group">
                            <input type="text" class="form-control" placeholder="محصولی را جستجو کنید" />
                        </div>
                    </div>
                    <div class="col-md-4  col-xs-12">
                        <div class="control-group">
                            <select class="form-control">
                                <option>ارزان ترن</option>
                                <option>گران ترن</option>
                                <option>پرفروش ترن</option>
                                <option>پربازدید ترن</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4  col-xs-12">
                        <div class="control-group">
                            <button class="btn btn-primary btn-block">جستجو</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="category">
            @if (Model.Data.Data != null)
            {
                @foreach (var item in Model.Data.Data)
                {
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="category__item">
                            <a href="#">
                                <div class="category__item__img">
                                    <img src="~/Files/Images/@(item.PrimaryImage)" class="img-responsive" />
                                </div>
                                <div class="category__item__title">
                                    @(item.Title)
                                </div>
                                <div class="category__item__price">
                                    
                                    <div>
                                        <span style="margin-left: 10px;">تومان</span><span>@(item.Price)</span>
                                    </div>
                                </div>
                                <div class="category__item__btn">
                                    <a class="btn btn-danger btn-block">افزودن به سبد خرید</a>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-danger">
                    محصولی یافت نشد
                </div>
            }

        </div>
    </div>
</div>
@Html.Partial("~/Views/Shared/_Pagination.cshtml", Model.Data)

