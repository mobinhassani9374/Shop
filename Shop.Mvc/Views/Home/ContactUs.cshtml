
@{
    ViewData["Title"] = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="addcomment" class="tab-pane fade">
    <div class="row">
        <div class="col-md-6 col-xs-12">
            @if (User.Identity.IsAuthenticated)
            {
                <form method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group">
                        <label>لطفا نظر خود را وارد کنید </label>
                        <textarea name="Description" class="form-control" rows="5" placeholder="نظر خود را وارد کنید"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="ladda-button btn btn-danger btn-block" data-style="zoom-in">
                            <span class="ladda-label">ثبت نظر</span>
                        </button>
                    </div>
                </form>
            }
            else
            {
                <div class="alert alert-danger">
                    <p>برای ثبت نظر باید وارد سایت شوید</p>
                    <p><a href="/Account/Login">اگر قبلا ثبت نام کرده اید از طریق این لینک وارد شوید</a></p>
                    <p><a href="/Account/Register">اگر قبلا ثبت نام نکرده اید از طریق این لینک وارد شوید</a></p>
                </div>
            }
        </div>
    </div>
</div>

